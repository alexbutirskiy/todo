
<%= form_for( [@task.project, @task], remote: true) do |f| %>
  <%= f.text_field :name %>
  <%= f.text_area :note, placeholder: "Note" %>
  <%= f.text_field :start_date, placeholder: "Start Date", class: "datepicker", 
                   value: date_time_convert(@task.start_date) %>
  <%= f.text_field :due_date, placeholder: "Due date", class: "datepicker",
                    value: date_time_convert(@task.due_date) %>
<% end %>

<%= @task.attachment_file_name %>

<%= form_for( [@task.project, @task], remote: true, authenticity_token: true) do |f| %>
  <%= f.file_field :attachment %>
  <%= f.submit "Send" %>
<% end %>
